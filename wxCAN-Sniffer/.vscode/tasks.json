{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: G++ build debug",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}/*.cpp",
        "-o",
        "${fileDirname}/wxCAN-Sniffer",
        "`/usr/local/bin/wx-config",
        "--cxxflags",
        "--libs`"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build debug version"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: G++ build release",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-O3",
        "-s",
        "-DNDEBUG",
        "-g",
        "${workspaceFolder}/*.cpp",
        "-o",
        "${fileDirname}/wxCAN-Sniffer",
        "`/usr/local/bin/wx-config",
        "--cxxflags",
        "--libs`"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "Build release version"
    }
  ],
  "version": "2.0.0"
}